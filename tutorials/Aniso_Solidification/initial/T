FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

// Tliq = 1723 1928.15
internalField   uniform 500;

boundaryField
{
	frontAndBack{
	type fixedGradient;
	gradient uniform -0.0;
	}

    lowerWall
    {
	type fixedGradient;
	gradient uniform -750000.0;
    }

    atmosphere
    {
	type fixedGradient;
	gradient uniform 0.0;
    }

    leftWall{
         type empty;
    }
    rightWall{
         type empty;
    }
}

